var arr = [1, 2, 3];
print "Antes:";
print arr[0];

arr[0] = 100;
print "Depois:";
print arr[0];

# ============================================
# Arrays com expressões
# ============================================

print "\n=== Arrays com Expressões ===";
var x = 5;
var y = 10;
var calculado = [x + y, x * y, x - y];
print calculado[0];  # 15
print calculado[1];  # 50
print calculado[2];  # -5

