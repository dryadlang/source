# ============================================
# Tuples
# ============================================

print "\n=== Tuples ===";
var coord = (10, 20);
print coord.0;  # 10
print coord.1;  # 20

var pessoa = ("Joao", 25, true);
print pessoa.0;  # "Joao"
print pessoa.1;  # 25

# ============================================
# Arrays e Funções
# ============================================

print "\n=== Arrays em Funções ===";

fn somaArray(arr) {
    var total = 0;
    var i = 0;
    while (i < 3) {
        total = total + arr[i];
        i = i + 1;
    }
    return total;
}

var nums = [10, 20, 30];
print somaArray(nums);  # 60

